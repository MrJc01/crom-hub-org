{
  "version": "1.0.0",
  "organization": {
    "name": "Hub.org Demo",
    "description": "Sistema de transparência e governança",
    "logo_url": "/images/logo.png",
    "primary_color": "#6366f1",
    "currency": "BRL",
    "locale": "pt-BR"
  },
  "theme": {
    "default": "dark"
  },
  "notifications": {
    "discord_webhook": "",
    "slack_webhook": ""
  },
  "integrations": {
    "whatsapp": {
      "enabled": false,
      "account_id": "",
      "phone_number_id": "",
      "access_token": "",
      "verify_token": "",
      "required_for_login": false
    },
    "email": {
      "enabled": false,
      "provider": "smtp",
      "host": "",
      "port": 587,
      "user": "",
      "pass": "",
      "from": "noreply@hub.org"
    }
  },
  "payments": {
    "stripe": {
      "enabled": false,
      "publishable_key": "",
      "secret_key": ""
    },
    "mercadopago": {
      "enabled": false,
      "public_key": "",
      "access_token": ""
    },
    "abacatepay": {
      "enabled": false,
      "api_key": ""
    },
    "asaas": {
      "enabled": false,
      "api_key": ""
    },
    "paypal": {
      "enabled": false,
      "client_id": "",
      "client_secret": ""
    },
    "manual": {
      "enabled": true,
      "pix_key": "email@example.com",
      "instructions": "Envie o comprovante para confirmar."
    }
  },
  "modules": {
    "donations": {
      "enabled": true,
      "settings": {
        "min_amount": 1,
        "max_amount": 10000000,
        "allow_anonymous": true,
        "show_donor_handle": true,
        "show_amount": true,
        "suggested_amounts": [
          10,
          25,
          50,
          100
        ],
        "allow_payment_proof_upload": true,
        "rewards": [
          {
            "amount": 100,
            "tag": "Supporter",
            "color": "blue"
          },
          {
            "amount": 500,
            "tag": "Sponsor",
            "color": "gold"
          }
        ]
      }
    },
    "auth": {
      "enabled": true,
      "settings": {
        "show_login_button": true,
        "whatsapp_mode": "optional",
        "show_popup_after_login": true
      }
    },
    "voting": {
      "enabled": true,
      "settings": {
        "allow_comments": true,
        "create_proposal_role": "admin",
        "pay_to_create": {
          "enabled": false,
          "amount": 0
        },
        "pay_to_vote": {
          "enabled": false,
          "amount": 0
        },
        "pay_to_comment": {
          "enabled": false,
          "amount": 0
        },
        "quorum": {
          "min_votes": 5
        },
        "duration_days": 7
      }
    },
    "blog": {
      "enabled": true,
      "settings": {
        "allow_comments": true,
        "pay_to_comment": {
          "enabled": false,
          "amount": 0
        }
      }
    },
    "transparency": {
      "enabled": true,
      "settings": {
        "show_all_transactions": true,
        "show_transaction_amounts": true,
        "dashboard_public": true
      }
    },
    "audit_log": {
      "enabled": true,
      "settings": {
        "public": true,
        "log_admin_actions": true,
        "actions_to_log": [
          "BAN_USER",
          "UNBAN_USER",
          "DELETE_PROPOSAL",
          "EDIT_PROPOSAL",
          "CANCEL_VOTE",
          "REFUND_TRANSACTION",
          "CHANGE_SETTINGS",
          "CHANGE_LAYOUT",
          "CREATE_EXPENSE",
          "EXPORT_PROJECT",
          "SYSTEM_UPDATE"
        ],
        "retention_days": 365
      }
    },
    "cron": {
      "enabled": true,
      "settings": {
        "auto_payments": {
          "enabled": true,
          "payments": [
            {
              "id": "hosting",
              "description": "Servidor DigitalOcean",
              "amount": 50,
              "currency": "BRL",
              "recipient": "DigitalOcean",
              "category": "infrastructure"
            },
            {
              "id": "domain",
              "description": "Domínio hub.org",
              "amount": 12,
              "currency": "BRL",
              "recipient": "Cloudflare",
              "category": "infrastructure"
            }
          ]
        }
      }
    },
    "export": {
      "enabled": false,
      "settings": {
        "allow_user_export": true
      }
    }
  },
  "security": {
    "rate_limiting": {
      "enabled": true,
      "requests_per_minute": 60
    },
    "session_duration_hours": 168
  },
  "landing_page": {
    "sections_order": [
      "donate",
      "hero",
      "about",
      "features",
      "updates",
      "transparency",
      "philosophy"
    ],
    "sections_data": {
      "hero": {
        "enabled": true,
        "title": "Transparência Radical",
        "subtitle": "para Projetos que Importam",
        "cta_primary": "Fazer Doação",
        "cta_secondary": "Ver Finanças"
      },
      "about": {
        "enabled": true,
        "title": "O que é o Hub.org?",
        "subtitle": "Uma plataforma focada em três pilares"
      },
      "updates": {
        "enabled": true,
        "title": "Últimas Atualizações",
        "subtitle": "Acompanhe o progresso do projeto"
      },
      "features": {
        "enabled": false,
        "title": "Módulos Habilitados",
        "subtitle": "Funcionalidades ativas nesta instância"
      },
      "transparency": {
        "enabled": true,
        "title": "Transparência Total",
        "subtitle": "Todas as movimentações são públicas"
      },
      "donate": {
        "enabled": true,
        "title": "Apoie o Projeto",
        "subtitle": "Sua contribuição mantém o projeto vivo"
      },
      "philosophy": {
        "enabled": true,
        "title": "Foco em Transações, Não em Vaidade",
        "badge": "Filosofia Anti-Social"
      }
    }
  }
}