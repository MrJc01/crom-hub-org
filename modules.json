{
  "version": "1.0.0",
  "organization": {
    "name": "Hub.org Demo",
    "description": "Sistema de transparência e governança",
    "logo_url": "/images/logo.png",
    "primary_color": "#6366f1",
    "currency": "BRL",
    "locale": "pt-BR"
  },
  "theme": {
    "default": "dark"
  },
  "notifications": {
    "discord_webhook": "",
    "slack_webhook": ""
  },
  "modules": {
    "donations": {
      "enabled": true,
      "settings": {
        "min_amount": 5,
        "max_amount": 10000,
        "allow_anonymous": true,
        "show_donor_handle": true,
        "show_amount": true,
        "suggested_amounts": [
          10,
          25,
          50,
          100
        ]
      }
    },
    "voting": {
      "enabled": true,
      "settings": {
        "pay_to_create": {
          "enabled": false,
          "amount": 0
        },
        "pay_to_vote": {
          "enabled": false,
          "amount": 0
        },
        "quorum": {
          "min_votes": 5
        },
        "duration_days": 7
      }
    },
    "transparency": {
      "enabled": true,
      "settings": {
        "show_all_transactions": true,
        "show_transaction_amounts": true,
        "dashboard_public": true
      }
    },
    "audit_log": {
      "enabled": true,
      "settings": {
        "public": true,
        "log_admin_actions": true,
        "actions_to_log": [
          "BAN_USER",
          "UNBAN_USER",
          "DELETE_PROPOSAL",
          "EDIT_PROPOSAL",
          "CANCEL_VOTE",
          "REFUND_TRANSACTION",
          "CHANGE_SETTINGS",
          "CHANGE_LAYOUT",
          "CREATE_EXPENSE"
        ],
        "retention_days": 365
      }
    },
    "cron": {
      "enabled": true,
      "settings": {
        "auto_payments": {
          "enabled": true,
          "payments": [
            {
              "id": "hosting",
              "description": "Servidor DigitalOcean",
              "amount": 50.00,
              "currency": "BRL",
              "recipient": "DigitalOcean",
              "category": "infrastructure"
            },
            {
              "id": "domain",
              "description": "Domínio hub.org",
              "amount": 12.00,
              "currency": "BRL",
              "recipient": "Cloudflare",
              "category": "infrastructure"
            }
          ]
        }
      }
    }
  },
  "security": {
    "rate_limiting": {
      "enabled": true,
      "requests_per_minute": 60
    },
    "session_duration_hours": 168
  },
  "landing_page": {
    "sections_order": [
      "donate",
      "hero",
      "about",
      "updates",
      "features",
      "transparency",
      "philosophy"
    ],
    "sections_data": {
      "hero": {
        "enabled": true,
        "title": "Transparência Radical",
        "subtitle": "para Projetos que Importam",
        "cta_primary": "Fazer Doação",
        "cta_secondary": "Ver Finanças"
      },
      "about": {
        "enabled": true,
        "title": "O que é o Hub.org?",
        "subtitle": "Uma plataforma focada em três pilares"
      },
      "updates": {
        "enabled": true,
        "title": "Últimas Atualizações",
        "subtitle": "Acompanhe o progresso do projeto"
      },
      "features": {
        "enabled": false,
        "title": "Módulos Habilitados",
        "subtitle": "Funcionalidades ativas nesta instância"
      },
      "transparency": {
        "enabled": true,
        "title": "Transparência Total",
        "subtitle": "Todas as movimentações são públicas"
      },
      "donate": {
        "enabled": true,
        "title": "Apoie o Projeto",
        "subtitle": "Sua contribuição mantém o projeto vivo"
      },
      "philosophy": {
        "enabled": true,
        "title": "Foco em Transações, Não em Vaidade",
        "badge": "Filosofia Anti-Social"
      }
    }
  }
}