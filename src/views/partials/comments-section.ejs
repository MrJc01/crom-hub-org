<div class="mt-8 pt-8 border-t border-gray-700">
  <h3 class="text-xl font-bold mb-4">Comentários</h3>

  <% if (typeof user !== 'undefined' && user) { %>
  <form hx-post="<%= postUrl %>" hx-target="#comments-list" hx-swap="outerHTML" class="mb-8">
    <textarea
      name="content"
      rows="3"
      class="w-full bg-gray-900 border border-gray-700 rounded-lg p-3 text-white focus:outline-none focus:border-indigo-500"
      placeholder="Deixe seu comentário..."
      required
    ></textarea>
    <div class="mt-2 flex justify-end">
      <button
        type="submit"
        class="bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-lg font-medium transition-colors"
      >
        Comentar
      </button>
    </div>
  </form>
  <% } else { %>
  <div class="bg-gray-800 p-4 rounded-lg text-center mb-8">
    <p class="text-gray-400">Faça login para comentar.</p>
  </div>
  <% } %> <%- include('comments-list', { comments: comments }) %>
</div>
