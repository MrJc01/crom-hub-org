<form
  hx-post="/donate"
  hx-target="#donation-form"
  hx-swap="innerHTML"
  class="space-y-4"
>
  <!-- Amount Selection -->
  <div>
    <label class="block text-sm text-gray-400 mb-2">Valor da doaÃ§Ã£o</label>
    <div class="grid grid-cols-4 gap-2 mb-2">
      <% const amounts = [10, 25, 50, 100]; %> <% amounts.forEach((amt, i) => {
      %>
      <button
        type="button"
        onclick="document.getElementById('amount').value = <%= amt %>"
        class="py-2 px-3 rounded-lg bg-gray-700 hover:bg-primary hover:text-white transition text-sm font-medium"
      >
        R$ <%= amt %>
      </button>
      <% }) %>
    </div>
    <div class="relative">
      <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-400"
        >R$</span
      >
      <input
        type="number"
        name="amount"
        id="amount"
        min="5"
        step="0.01"
        placeholder="0,00"
        required
        class="w-full bg-gray-700 border border-gray-600 rounded-lg py-3 pl-10 pr-4 text-white placeholder-gray-500 focus:outline-none focus:border-primary transition"
      />
    </div>
  </div>

  <!-- Message (Optional) -->
  <div>
    <label class="block text-sm text-gray-400 mb-2">Mensagem (opcional)</label>
    <textarea
      name="message"
      placeholder="Deixe uma mensagem..."
      maxlength="200"
      rows="2"
      class="w-full bg-gray-700 border border-gray-600 rounded-lg py-2 px-4 text-white placeholder-gray-500 focus:outline-none focus:border-primary transition resize-none"
    ></textarea>
  </div>

  <!-- Email (Optional for @handle) -->
  <div>
    <label class="block text-sm text-gray-400 mb-2"
      >Email (opcional, para criar seu @handle)</label
    >
    <input
      type="email"
      name="email"
      placeholder="seu@email.com"
      class="w-full bg-gray-700 border border-gray-600 rounded-lg py-2 px-4 text-white placeholder-gray-500 focus:outline-none focus:border-primary transition"
    />
    <p class="text-xs text-gray-500 mt-1">
      Deixe em branco para doar anonimamente
    </p>
  </div>

  <!-- Submit Button -->
  <button
    type="submit"
    class="w-full py-3 px-4 bg-primary hover:bg-opacity-90 text-white font-semibold rounded-lg transition flex items-center justify-center gap-2"
  >
    <span class="htmx-indicator animate-pulse-slow">â³</span>
    <span>Doar Agora</span>
  </button>

  <p class="text-xs text-gray-500 text-center">
    ğŸ”’ Pagamento seguro â€¢ TransparÃªncia total
  </p>
</form>
