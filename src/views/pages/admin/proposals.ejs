<!-- Proposals Management -->
<div class="space-y-6">
  <!-- Stats -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <div class="p-6 bg-white/5 rounded-2xl border border-white/10">
      <p class="text-sm text-gray-400">Total Propostas</p>
      <p class="text-2xl font-bold"><%= proposals.length %></p>
    </div>
    <div class="p-6 bg-white/5 rounded-2xl border border-white/10">
      <p class="text-sm text-gray-400">Em Votação</p>
      <p class="text-2xl font-bold text-blue-400">
        <%= proposals.filter(p => p.status === 'open').length %>
      </p>
    </div>
    <div class="p-6 bg-white/5 rounded-2xl border border-white/10">
      <p class="text-sm text-gray-400">Aprovadas</p>
      <p class="text-2xl font-bold text-green-400">
        <%= proposals.filter(p => p.result === 'approved').length %>
      </p>
    </div>
  </div>

  <!-- Proposals List -->
  <div class="glass rounded-2xl border border-white/10 overflow-hidden">
    <div class="overflow-x-auto">
      <table class="w-full text-left">
        <thead class="bg-white/5 text-gray-400 text-sm uppercase">
          <tr>
            <th class="px-6 py-4">Proposta</th>
            <th class="px-6 py-4">Autor</th>
            <th class="px-6 py-4">Status</th>
            <th class="px-6 py-4">Votos</th>
            <th class="px-6 py-4">Ações</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-white/10">
          <% proposals.forEach(p => { const total = p.yesCount + p.noCount; const yesPercent = total
          > 0 ? (p.yesCount / total * 100).toFixed(0) : 0; %>
          <tr class="hover:bg-white/5 transition">
            <td class="px-6 py-4">
              <p class="font-medium text-white"><%= p.title %></p>
              <p class="text-xs text-gray-400 mt-1 truncate max-w-xs"><%= p.description %></p>
            </td>
            <td class="px-6 py-4">
              <div class="flex items-center gap-2">
                <div
                  class="w-6 h-6 rounded-full bg-primary/20 flex items-center justify-center text-xs"
                >
                  <%= p.authorHandle[0].toUpperCase() %>
                </div>
                <span class="text-sm"><%= p.authorHandle %></span>
              </div>
            </td>
            <td class="px-6 py-4">
              <% if (p.status === 'open') { %>
              <span class="px-2 py-1 bg-blue-500/10 text-blue-400 rounded text-xs">Aberta</span>
              <% } else if (p.result === 'approved') { %>
              <span class="px-2 py-1 bg-green-500/10 text-green-400 rounded text-xs">Aprovada</span>
              <% } else { %>
              <span class="px-2 py-1 bg-red-500/10 text-red-400 rounded text-xs">Rejeitada</span>
              <% } %>
            </td>
            <td class="px-6 py-4">
              <div class="flex items-center gap-2 text-sm">
                <div class="w-24 h-2 bg-white/10 rounded-full overflow-hidden">
                  <div class="h-full bg-green-500" style="width: <%= yesPercent %>%"></div>
                </div>
                <span><%= yesPercent %>%</span>
              </div>
              <p class="text-xs text-gray-500 mt-1"><%= total %> votos</p>
            </td>
            <td class="px-6 py-4">
              <% if (p.status === 'open') { %>
              <button
                hx-post="/admin/proposals/<%= p.id %>/close"
                hx-swap="outerHTML"
                class="text-red-400 hover:text-red-300 text-sm font-medium"
              >
                Encerrar
              </button>
              <% } else { %>
              <span class="text-gray-500 text-sm">--</span>
              <% } %>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>
</div>
