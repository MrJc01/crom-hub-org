<!DOCTYPE html>
<html lang="pt-BR" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title || 'Minha Conta - ' + organization.name %></title>

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      tailwind.config = {
        darkMode: 'class',
        theme: {
          extend: {
            colors: {
              primary: '<%= organization.primary_color || "#6366f1" %>',
              'primary-dark': '#4f46e5',
            },
          },
        },
      };
    </script>

    <!-- HTMX -->
    <script src="https://unpkg.com/htmx.org@1.9.10"></script>

    <style>
      .glass {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
      }

      /* Custom Scrollbar */
      .custom-scrollbar::-webkit-scrollbar {
        width: 4px;
      }
      .custom-scrollbar::-webkit-scrollbar-track {
        background: transparent;
      }
      .custom-scrollbar::-webkit-scrollbar-thumb {
        background: rgba(255, 255, 255, 0.1);
        border-radius: 4px;
      }
      .custom-scrollbar::-webkit-scrollbar-thumb:hover {
        background: rgba(255, 255, 255, 0.2);
      }
    </style>
  </head>
  <body class="bg-slate-900 text-white">
    <div class="flex min-h-screen">
      <!-- Sidebar -->
      <aside
        class="w-72 bg-slate-900/50 border-r border-white/10 hidden md:flex flex-col backdrop-blur-xl"
      >
        <!-- Logo -->
        <div class="p-6 border-b border-white/10">
          <a href="/" class="flex items-center gap-3 hover:opacity-80 transition">
            <div
              class="w-10 h-10 rounded-xl bg-gradient-to-br from-primary to-purple-600 flex items-center justify-center font-bold shadow-lg shadow-primary/20"
            >
              H
            </div>
            <span class="font-bold text-xl tracking-tight"><%= organization.name %></span>
          </a>
        </div>

        <!-- Navigation -->
        <nav class="flex-1 p-4 space-y-2 overflow-y-auto custom-scrollbar">
          <p class="px-4 text-xs font-bold text-gray-500 uppercase tracking-wider mb-2 mt-2">
            Menu Principal
          </p>

          <a
            href="/me"
            class="group flex items-center gap-4 px-4 py-3.5 rounded-xl transition-all duration-200 font-medium <%= currentPage === 'profile' ? 'bg-gradient-to-r from-primary/20 to-primary/5 text-white border-l-4 border-primary shadow-lg shadow-primary/5 rounded-l-md' : 'text-gray-400 hover:bg-white/5 hover:text-white hover:translate-x-1' %>"
          >
            <div
              class="icon-container group-hover:scale-110 transition-transform <%= currentPage === 'profile' ? 'text-primary drop-shadow-[0_0_8px_rgba(99,102,241,0.5)]' : '' %>"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="w-5 h-5"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                />
              </svg>
            </div>
            <span>Meu Perfil</span>
            <% if (currentPage === 'profile') { %>
            <div
              class="ml-auto w-1.5 h-1.5 rounded-full bg-white shadow-[0_0_8px_rgba(255,255,255,0.8)]"
            ></div>
            <% } %>
          </a>

          <a
            href="/me/activity"
            class="group flex items-center gap-4 px-4 py-3.5 rounded-xl transition-all duration-200 font-medium <%= currentPage === 'activity' ? 'bg-gradient-to-r from-primary/20 to-primary/5 text-white border-l-4 border-primary shadow-lg shadow-primary/5 rounded-l-md' : 'text-gray-400 hover:bg-white/5 hover:text-white hover:translate-x-1' %>"
          >
            <div
              class="icon-container group-hover:scale-110 transition-transform <%= currentPage === 'activity' ? 'text-primary drop-shadow-[0_0_8px_rgba(99,102,241,0.5)]' : '' %>"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="w-5 h-5"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
                />
              </svg>
            </div>
            <span>Minha Atividade</span>
          </a>

          <a
            href="/me/settings"
            class="group flex items-center gap-4 px-4 py-3.5 rounded-xl transition-all duration-200 font-medium <%= currentPage === 'settings' ? 'bg-gradient-to-r from-primary/20 to-primary/5 text-white border-l-4 border-primary shadow-lg shadow-primary/5 rounded-l-md' : 'text-gray-400 hover:bg-white/5 hover:text-white hover:translate-x-1' %>"
          >
            <div
              class="icon-container group-hover:scale-110 transition-transform <%= currentPage === 'settings' ? 'text-primary drop-shadow-[0_0_8px_rgba(99,102,241,0.5)]' : '' %>"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="w-5 h-5"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"
                />
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
                />
              </svg>
            </div>
            <span>Configurações</span>
          </a>

          <% if (modules && modules.export && modules.export.enabled &&
          modules.export.settings?.allow_user_export) { %>
          <a
            href="/me/export"
            class="group flex items-center gap-4 px-4 py-3.5 rounded-xl transition-all duration-200 font-medium <%= currentPage === 'export' ? 'bg-gradient-to-r from-primary/20 to-primary/5 text-white border-l-4 border-primary shadow-lg shadow-primary/5 rounded-l-md' : 'text-gray-400 hover:bg-white/5 hover:text-white hover:translate-x-1' %>"
          >
            <div
              class="icon-container group-hover:scale-110 transition-transform <%= currentPage === 'export' ? 'text-primary drop-shadow-[0_0_8px_rgba(99,102,241,0.5)]' : '' %>"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="w-5 h-5"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"
                />
              </svg>
            </div>
            <span>Exportar</span>
          </a>
          <% } %>

          <!-- API Token Placeholder -->
          <% if (modules && modules.api && modules.api.enabled) { %>
          <a
            href="/me/api"
            class="group flex items-center gap-4 px-4 py-3.5 rounded-xl transition-all duration-200 font-medium <%= currentPage === 'api' ? 'bg-gradient-to-r from-primary/20 to-primary/5 text-white border-l-4 border-primary shadow-lg shadow-primary/5 rounded-l-md' : 'text-gray-400 hover:bg-white/5 hover:text-white hover:translate-x-1' %>"
          >
            <div
              class="icon-container group-hover:scale-110 transition-transform <%= currentPage === 'api' ? 'text-primary drop-shadow-[0_0_8px_rgba(99,102,241,0.5)]' : '' %>"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="w-5 h-5"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"
                />
              </svg>
            </div>
            <span>API & Tokens</span>
          </a>
          <% } %>
        </nav>

        <!-- Back to Site -->
        <div class="p-4 border-t border-white/10 bg-slate-900/50">
          <a
            href="/"
            class="flex items-center gap-4 px-4 py-3.5 rounded-xl transition-all duration-200 font-medium text-gray-400 hover:text-white hover:bg-white/5 mb-1 group"
          >
            <div class="icon-container group-hover:-translate-x-1 transition-transform">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="w-5 h-5"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M10 19l-7-7m0 0l7-7m-7 7h18"
                />
              </svg>
            </div>
            <span>Voltar ao Site</span>
          </a>
          <a
            href="/auth/logout"
            class="flex items-center gap-4 px-4 py-3.5 rounded-xl transition-all duration-200 font-medium text-red-400 hover:bg-red-500/10 hover:text-red-300 group"
          >
            <div class="icon-container group-hover:translate-x-1 transition-transform">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="w-5 h-5"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"
                />
              </svg>
            </div>
            <span>Sair</span>
          </a>
        </div>
      </aside>

      <!-- Main Content -->
      <div class="flex-1 flex flex-col">
        <!-- Mobile Header -->
        <header
          class="md:hidden h-16 border-b border-white/10 flex items-center justify-between px-6"
        >
          <a href="/" class="font-bold text-lg"><%= organization.name %></a>
          <button class="text-white">☰</button>
        </header>

        <!-- Top Bar (Desktop) -->
        <header
          class="hidden md:flex h-16 border-b border-white/10 items-center justify-between px-6"
        >
          <!-- Breadcrumb -->
          <nav class="flex items-center gap-2 text-sm text-gray-400">
            <a href="/me" class="hover:text-white">Minha Conta</a>
            <% if (typeof breadcrumb !== 'undefined' && breadcrumb) { %>
            <span>/</span>
            <span class="text-white"><%= breadcrumb %></span>
            <% } %>
          </nav>

          <div class="flex items-center gap-3">
            <span class="text-sm text-gray-400">Logado como</span>
            <span class="font-medium text-white"><%= locals.user?.handle %></span>
          </div>
        </header>

        <!-- Page Content -->
        <main class="flex-1 p-6 overflow-auto"><%- body %></main>
      </div>
    </div>

    <!-- Toast Container -->
    <div id="toast-container" class="fixed bottom-6 right-6 z-50 space-y-2"></div>

    <script>
      function showToast(message, type = 'success') {
        const container = document.getElementById('toast-container');
        const toast = document.createElement('div');
        toast.className = `px-4 py-3 rounded-xl text-sm font-medium animate-fade-in ${
          type === 'success'
            ? 'bg-green-500/20 text-green-400 border border-green-500/50'
            : 'bg-red-500/20 text-red-400 border border-red-500/50'
        }`;
        toast.textContent = message;
        container.appendChild(toast);
        setTimeout(() => toast.remove(), 4000);
      }

      document.body.addEventListener('htmx:afterSwap', function (evt) {
        if (evt.detail.target.dataset.toast) {
          showToast(evt.detail.target.dataset.toast);
        }
      });
    </script>
  </body>
</html>
